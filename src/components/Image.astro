---
interface Props {
  src: string;
  alt?: string;
  class?: string;
  size?: string;
}

const { src, alt = "", class: className = "", size = "1.333em" } = Astro.props;
---

<img
  src={src}
  alt={alt}
  class={className}
  style={`width: ${size}; height: ${size};`}
/>

<style>
  img {
    display: inline-block;
    object-fit: contain;
  }
</style>
